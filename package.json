{
  "name": "financian-server-1",
  "version": "1.0.0",
  "description": "server of financian",
  "main": "dist/index.js",
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "ts-node src/prisma/seed.ts"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "rimraf dist && npx tsc && npm run copy-prisma-client",
    "copy-prisma-client": "cp -r src/prisma/generated dist/prisma/generated",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "dotenv -e .env.development prisma migrate dev",
    "prisma:migrate:deploy": "dotenv -e .env.production prisma migrate deploy",
    "prisma:seed": "prisma db seed",
    "deploy": "cross-env NODE_ENV=production npx ts-node src/scripts/deploy.ts",
    "format:check": "prettier --check .",
    "format:write": "prettier --write",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vaahe/financian-server.git"
  },
  "author": "vaahe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vaahe/financian-server/issues"
  },
  "homepage": "https://github.com/vaahe/financian-server#readme",
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.5.0",
    "@types/express-session": "^1.18.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.2",
    "@types/nodemailer": "^6.4.15",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/paypal__checkout-server-sdk": "^1.0.8",
    "cross-env": "^7.0.3",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.3.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.1",
    "prisma": "^5.16.1",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.12.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@prisma/client": "^5.16.1",
    "@types/cookie-parser": "^1.4.7",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "express": "^4.19.2",
    "express-fileupload": "^1.5.0",
    "express-rate-limit": "^7.3.1",
    "express-session": "^1.18.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.13",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "redis": "^4.6.15",
    "stripe": "^16.1.0",
    "vercel": "^34.3.0"
  }
}
